<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.ca.shareview" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_beelogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.ca.asap.activity.InitiativesActivity"
            android:label="@string/initiativesActivityLabel" >
        </activity>
        <activity
            android:name="br.com.ca.asap.activity.SynchronizeInitiativesActivity"
            android:label="@string/app_name"
            android:noHistory="true">
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:theme="@style/AppTheme.NoActionBar"
            android:name="br.com.ca.asap.activity.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.ca.asap.activity.DeliverablesActivity"
            android:label="@string/deliverablesActivityLabel" >
        </activity>
        <activity
            android:name="br.com.ca.asap.activity.InitiativeReportActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="br.com.ca.asap.activity.InitiativesReportActivity"
            android:label="@string/initiaitveReportActivityLabel" >
        </activity>
        <activity
            android:name="br.com.ca.asap.activity.SendMessageActivity"
            android:label="@string/title_activity_send_message"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="br.com.ca.asap.activity.ShowMessagesActivity"
            android:label="@string/title_activity_show_messages"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="br.com.ca.asap.activity.SynchronizeMessagesActivity"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="br.com.ca.asap.activity.ShowDayPrioritiesActivity"
            android:label="@string/title_activity_show_day_priorities"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="br.com.ca.asap.activity.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="br.com.ca.asap.activity.DeliverableUpdateActivity"
            android:label="@string/title_activity_deliverable_update"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
